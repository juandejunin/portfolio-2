---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <!-- Código modificado en el archivo HTML -->
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JA75 — web dev</title>
    <meta name="description" content="web site ja75" />
    <meta
      name="keywords"
      content="free website templates, free html5, free template, free bootstrap, free website template, html5, css3, mobile first, responsive"
    />
    <meta name="author" content="ja75" />
    <!-- Preconnect para Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Precarga optimizada de Inconsolata -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700&display=swap"
      as="style"
      onload="this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700&display=swap"
        rel="stylesheet"
      />
    </noscript>
  </head>

  <body>
    <div id="page">
      <Navbar />
      <slot />
      <Footer />
    </div>
    <div class="gototop js-top">
      <a href="#" class="js-gotop"><span class="icon-[mdi:arrow-up]"></span></a>
    </div>
    <script>
      function highlightActiveLink() {
        const currentPath = window.location.pathname;
        const links = document.querySelectorAll(".nav-link");

        links.forEach((link) => {
          if (link.getAttribute("href") === currentPath) {
            link.classList.add("text-astro-primary-orange");
          } else {
            link.classList.remove("text-astro-primary-orange");
          }
        });
      }
      document.addEventListener("DOMContentLoaded", highlightActiveLink);
    </script>
  </body>
</html>
