<header
  id="ja75-header"
  class="ja75-cover bg-top bg-no-repeat min-h-screen flex items-center relative"
>
  <!-- Overlay oscuro para contraste -->
  <div class="absolute inset-0"></div>

  <!-- Contenedor principal -->
  <div class="container max-w-7xl mx-auto px-4 relative z-10">
    <div class="flex justify-center">
      <div class="w-full md:w-8/12 text-center">
        <div class="flex items-center min-h-screen">
          <div class="w-full animate-fade-in">
            <!-- Título principal -->
            <h1
              class="text-4xl md:text-[54px] font-inconsolata font-light text-white leading-tight mb-5"
            >
              ¡Hola! Soy Juan Amieva
            </h1>

            <!-- Subtítulo con tu descripción -->
            <h2
              class="text-xl md:text-2xl font-inconsolata text-white leading-relaxed mb-8"
            >
              Desarrollador de software y explorador sonoro
            </h2>

            <!-- Breve descripción adicional -->
            <p class="text-lg font-inconsolata text-white mb-10">
              Creo soluciones digitales y exploro el mundo del sonido.
            </p>

            <!-- Botones personalizados -->
            <p class="space-x-4">
              <a
                href="#projects"
                class="btn bg-astro-accent-pink text-astro-primary-dark text-lg font-inconsolata py-4 px-8 rounded-full hover:bg-[#e14b7e] hover:shadow-lg transition duration-500"
              >
                Dev
              </a>
              <a
                href="#music"
                class="btn bg-astro-primary-orange text-black text-lg font-inconsolata py-4 px-8 rounded-full hover:bg-[#fee336] hover:shadow-lg transition duration-500"
              >
                Sound
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* Animación personalizada */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }
</style>
