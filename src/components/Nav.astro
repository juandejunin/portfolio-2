---
// src/components/Nav.astro
const navItems = [
  { name: "Home", href: "#", active: true },
  { name: "Portfolio", href: "#portfolio" },
  { name: "Blog", href: "#blog" },
  { name: "About", href: "#about" },
];
---

<nav class="bg-jaSecondary text-white py-4">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold font-inconsolata">Juan Amieva</a>
    <ul class="flex space-x-6">
      {navItems.map(item => (
        <li>
          <a href={item.href} class={`hover:text-jaPrimary ${item.active ? 'text-jaPrimary' : ''}`}>
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>