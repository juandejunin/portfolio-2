---
import MainLayout from '../layouts/MainLayout.astro';

// Datos de ejemplo para los proyectos (personaliza con los tuyos)
const projects = [
  {
    title: "Ritmos del alma",
    image: "/images/portfolio/ritmos-del-alma.jpg",
    description: "Una instalación sonora interactiva que fusiona 30 años de cantos rituales con tecnología digital.",
    link: "#",
  },
  {
    title: "Código resonante",
    image: "/images/portfolio/codigo-resonante.jpg",
    description: "Aplicación web que genera paisajes sonoros a partir de código, desarrollada en 5 años de experiencia.",
    link: "#",
  },
  {
    title: "Sistemas vivos",
    image: "/images/portfolio/sistemas-vivos.jpg",
    description: "Proyecto experimental que conecta sensores físicos con audio en tiempo real.",
    link: "#",
  },
  {
    title: "Exploración 2025",
    image: "/images/portfolio/exploracion-2025.jpg",
    description: "Colección de piezas sonoras grabadas durante mis últimos viajes creativos.",
    link: "#",
  },
  {
    title: "Puentes digitales",
    image: "/images/portfolio/puentes-digitales.jpg",
    description: "Plataforma colaborativa para artistas sonoros y desarrolladores.",
    link: "#",
  },
  {
    title: "Eco binario",
    image: "/images/portfolio/eco-binario.jpg",
    description: "Herramienta de software para visualizar ondas sonoras en tiempo real.",
    link: "#",
  },
];
---

<MainLayout title="Portafolio - Juan Amieva">
  <section id="ja75-portfolio" class="py-28 bg-white">
    <div class="container max-w-7xl mx-auto px-4">
      <!-- Título y descripción -->
      <div class="text-center mb-20 animate-fade-in">
        <h2 class="text-[40px] font-inconsolata font-normal text-black mb-5">
          Mi Portafolio
        </h2>
        <p class="text-lg text-black/80">
          30 años explorando el sonido y 5 años desarrollando software, condensados en proyectos que unen arte y tecnología.
        </p>
      </div>

      <!-- Galería de proyectos -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {projects.map((project) => (
          <div class="ja75-portfolio-item animate-fade-in">
            <a href={project.link} class="block">
              <div
                class="portfolio-entry bg-cover bg-center bg-no-repeat h-[300px] rounded-t-lg"
                style={`background-image: url(${project.image});`}
              ></div>
              <div class="portfolio-text p-6 bg-white shadow-md rounded-b-lg">
                <h3 class="text-2xl font-inconsolata font-normal text-black mb-3">
                  {project.title}
                </h3>
                <p class="text-lg text-black/70">{project.description}</p>
                <div class="flex justify-between items-center mt-4 pt-4 border-t border-black/10">
                  <span class="text-sm text-black/50">Ver más</span>
                  <span class="icon-[mdi:arrow-right] w-5 h-5 text-[#DD356E]"></span>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }
  .ja75-portfolio-item:hover .portfolio-text {
    @apply shadow-lg;
  }
</style>